
<%= render 'users/list', users: @users %>



    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>

<tr>
 <% if book.image.attached? %>
    <td><%= image_tag book.image, size: "200x200" %></td>
  <% else %>
    <td><%= image_tag 'no_image', size: "200x200" %></td>
  <% end %>

    <td><%=link_to book.title, book_path(book.id) %></td>


  <td><%= book.body %></td>
 <td><%= link_to "Show", book_path(book.id)%>
  </td>
  <td>
    <%= link_to "Edit", edit_user_path(book.id)%>
  </td>
  <td>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

  </td>
  </tr>

<% end %>

  </tbody>
</table>
    </div>
  </div>
</div>


<!-- ユーザーの詳細 -->
<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

