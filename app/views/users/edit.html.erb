<% provide(:title, "Edit user") %>
<h1>User info</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>


      <%= f.label :Name %>
      <%= f.text_field :name, class: 'form_control' %>

      <%= f.label :Introduction %>
      <%= f.text_field :introduction, class: 'form_control' %>


      <%= f.submit "Update User", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">


    </div>
  </div>
</div>

