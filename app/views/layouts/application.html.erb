<html>
  <head>
    <title>Bookers2</title>
    <body>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
                  <div class="container">
                    <a class="navbar-brand" href="/"><span>Bookers2</span></a>
                    <% if user_signed_in? %>
                    <%= link_to user_path(current_user.id), class: "nav-link text-light", method: :get do %>
                    <i class="fa-solid fa-house-chimney"></i> Home
                    <% end %>
                    <%= link_to users_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-users"></i>Users
                    <% end %>
                    <%= link_to books_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-book-open"></i>Books
                    <% end %>
                    <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
                    <i class="fas fa-sign-out-alt"></i>Log out
                    <% end %>
                    <% else %>
                    <%= link_to root_path, class: "nav-link text-light", method: :get do %>
                    <i class="fa-solid fa-house-chimney"></i> Home
                    <% end %>
                    <%= link_to about_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-link"></i>About
                    <% end %>
                    <%= link_to new_user_registration_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-user-plus"></i>Sign up
                    <% end %>
                    <%= link_to new_user_session_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-sign-in-alt"></i>Log in
                    <% end %>
                    <% end %>
                    </div>
                    </div>
                    </nav>
                    </header>
                    </body>
                    <p id="notice"><%= notice %></p>
                    <%= yield %>
                    </html>
