<html>
    <body>
        <main>
            <p id="notice"></p>
            <div class='container'>
                <div class='row'>
                    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                        <h1>Editing Book</h1>
                        <% if @book.errors.any? %>
                        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:
                        <ul></h3><% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                            <% end %>
                        </ul>
                                <% end %>
                                    <% if @book.id == current_user.id %>
                                    <%= link_to edit_user_path(current_user.id) do %>
                                    <div class= " edit btn btn-outline-secondary btn-default btn-block" ><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></div>
                                        <% end %>
                                            <% end %>
                                            <%= form_with model: @book, local: true do |f| %>
                                            <div>
                                                <%= f.label :Title %><br>
                                                <%= f.text_field :title, autofocus: true %>
                                            </div>
                                            <div>
                                                <%= f.label :Opinion %><br>
                                                <%= f.text_area :body %>
                                            </div>
                                            <div><%= f.submit "Update Book" %></div>
                                                <% end %>
                                                <%= link_to "Show", book_path %> |
                                                <%= link_to "Back", books_path %>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>