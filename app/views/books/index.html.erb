<% if @book.errors.any? %>
<h3><%= @book.errors.count %>errors prohibited this obj from being saved:
<ul></h3><% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/info', user: @user, book: @book %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <% if book.user.profile_image.attached? %>
                <%#= f.file_field :profile_image, accept: "image/*" %>
                <td><%= image_tag book.user.profile_image, size: "100x100" %></td>
                <% else %>
                <td><%= image_tag 'no_image', size: "100x100" %></td>
                <% end %>
                <td><%= link_to book_path(book), method: :get do %>
                <%= book.title %>
                <% end %></td>
                <td><%= book.body %></td>
                </tbody>
                <% end %>
                </table>
                </div>
                </div>
                </div>
