  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th></th>
      <th>Opinion</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>



  <% @books.each do |book| %>
   <% if book.image.attached? %>
    <td><%= image_tag book.image, size: "100x100" %></td>
  <% else %>
    <td><%= image_tag 'no_image', size: "100x100" %></td>
  <% end %>
  
  <td><%= book.body %></td>
 <td><%= link_to "Show", book_path(book.id)%>
  </td>

  </tr>

<% end %>
</tbody>
</table>
