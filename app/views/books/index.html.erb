<h1>New book</h1>


<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field:title %>
  <h4>body</h4>
  <%= f.text_area:body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>



