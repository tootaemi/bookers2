

<%= render 'users/list', users: @users %>


<div>
  <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %></div>
<div>


      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>

  <tbody>
  <% @books.each do |book| %>

<tr>
 <% if book.image.attached? %>
    <td><%= image_tag book.image, size: "100x100" %></td>
  <% else %>
    <td><%= image_tag 'no_image', size: "100x100" %></td>
  <% end %>


 <td><%=link_to book.title, book_path(book.id) %></td>


  <td><%= book.body %></td>
 <td><%= link_to "Show", book_path(book.id)%>
  </td>
  <td>
    <%= link_to "Edit", edit_user_path(book.id)%>
  </td>
  <td>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

  </td>
  </tr>

<% end %>

  </tbody>
</table>
    </div>
  </div>
</div>




